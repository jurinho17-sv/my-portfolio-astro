---
import { getCollection, render } from 'astro:content'
import Layout from '@/layouts/Layout.astro'
import { getPageInfo } from '@/utils/page'

export async function getStaticPaths() {
  const projects = await getCollection('projects')
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }))
}

const { currentLang } = getPageInfo(Astro.url.pathname)
const { project } = Astro.props
const { Content } = await render(project)

const siteTitle = 'Ju Ho Kim'
const siteDescription = project.data.description
---

<Layout title={siteTitle} description={siteDescription}>
  <main class="main-container">
    <!-- Back Button -->
    <div class="mb-8">
      <a 
        href="/projects/" 
        class="inline-flex items-center text-secondary hover:text-primary transition-colors text-sm font-medium"
      >
        ‚Üê Back to Projects
      </a>
    </div>

    <!-- Project Header -->
    <header class="mb-12">
      <div class="flex flex-wrap items-start justify-between gap-4 mb-6">
        <div class="flex-1 min-w-0">
          <h1 class="text-3xl md:text-4xl font-bold text-primary mb-4 leading-tight">
            {project.data.title}
          </h1>
          <p class="text-lg text-secondary leading-relaxed max-w-3xl">
            {project.data.description}
          </p>
        </div>
        
        {/* Project Links */}
        <div class="flex gap-3 flex-shrink-0">
          {project.data.github && (
            <a 
              href={project.data.github} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-[#003262] text-white px-4 py-2 rounded-lg font-medium hover:bg-[#FDB515] hover:text-[#003262] transition-all duration-300"
            >
              <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 24 24">
                <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
              </svg>
              GitHub
            </a>
          )}
          {project.data.demo && (
            <a 
              href={project.data.demo} 
              target="_blank" 
              rel="noopener noreferrer"
              class="inline-flex items-center gap-2 bg-[#FDB515] text-[#003262] px-4 py-2 rounded-lg font-medium hover:bg-[#003262] hover:text-white transition-all duration-300"
            >
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
              </svg>
              Live Demo
            </a>
          )}
        </div>
      </div>

      <!-- Project Meta -->}
      <div class="flex flex-wrap items-center gap-6 text-sm text-secondary">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <time>
            {project.data.published.toLocaleDateString('en-US', {
              year: 'numeric',
              month: 'long',
              day: 'numeric'
            })}
          </time>
        </div>
        
        {project.data.featured && (
          <div class="flex items-center gap-2">
            <svg class="w-4 h-4 text-yellow-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z" />
            </svg>
            <span class="text-yellow-600 dark:text-yellow-400 font-medium">Featured Project</span>
          </div>
        )}
      </div>

      <!-- Technologies -->
      {project.data.technologies && project.data.technologies.length > 0 && (
        <div class="mt-6">
          <h3 class="text-sm font-medium text-secondary mb-3">Technologies Used</h3>
          <div class="flex flex-wrap gap-2">
            {project.data.technologies.map((tech) => (
              <span class="bg-[#003262]/10 dark:bg-[#1E5A96]/30 text-[#003262] dark:text-[#1E5A96] px-3 py-1 rounded-full text-sm font-medium">
                {tech}
              </span>
            ))}
          </div>
        </div>
      )}
    </header>

    <!-- Project Image Placeholder -->
    <div class="mb-12">
      <div class="aspect-video bg-gradient-to-br from-blue-100 to-indigo-200 dark:from-gray-700 dark:to-gray-600 rounded-lg flex items-center justify-center">
        <div class="text-center">
          <div class="text-6xl mb-4 text-gray-400 dark:text-gray-500">üì±</div>
          <p class="text-gray-500 dark:text-gray-400 text-sm">Project Screenshot Coming Soon</p>
        </div>
      </div>
    </div>

    <!-- Project Content -->
    <article class="prose prose-lg dark:prose-invert max-w-none">
      <Content />
    </article>

    <!-- Navigation -->
    <nav class="mt-16 pt-8 border-t border-gray-200 dark:border-gray-700">
      <div class="flex justify-between items-center">
        <a 
          href="/projects/" 
          class="inline-flex items-center gap-2 text-secondary hover:text-primary transition-colors font-medium"
        >
          ‚Üê All Projects
        </a>
        <a 
          href="/contact/" 
          class="inline-flex items-center gap-2 bg-[#003262] text-white px-4 py-2 rounded-lg font-medium hover:bg-[#FDB515] hover:text-[#003262] transition-all duration-300"
        >
          Discuss This Project
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
          </svg>
        </a>
      </div>
    </nav>
  </main>
</Layout>

<style>
.main-container {
  max-width: 4xl;
  margin: 0 auto;
  padding: 2rem 1rem;
}

/* Ensure proper prose styling */
.prose {
  color: inherit;
}

.prose h2,
.prose h3,
.prose h4 {
  color: var(--color-primary);
}

.prose a {
  color: var(--color-primary);
  text-decoration: none;
}

.prose a:hover {
  text-decoration: underline;
}

.prose code {
  background-color: var(--color-highlight);
  padding: 0.2em 0.4em;
  border-radius: 0.25rem;
  font-size: 0.875em;
}

.prose pre {
  background-color: var(--color-background);
  border: 1px solid var(--color-border);
}
</style>
