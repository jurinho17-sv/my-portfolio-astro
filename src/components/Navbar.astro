---
import { ui } from '@/i18n/ui'
import { getPageInfo } from '@/utils/page'

const { currentLang, isHome, isPost, isTag, isAbout, isBlogList, isProjects, isResume, isContact } = getPageInfo(Astro.url.pathname)
const currentUI = ui[currentLang as keyof typeof ui] ?? {}

const isBlogActive = isBlogList  // Blog는 블로그 목록 페이지에서만 활성화 (개별 포스트 제외)
const isTagActive = isTag
const isAboutActive = isAbout
const isProjectsActive = isProjects
const isResumeActive = isResume
const isContactActive = isContact

function getNavItemClass(isActive: boolean) {
  return isActive
    ? 'highlight-static c-primary font-bold after:bottom-0.7em'
    : 'highlight-hover transition-[colors,font-weight] after:bottom-0.7em hover:c-primary'
}

const navItems = [
  {
    href: '/',
    label: 'Home',
    className: getNavItemClass(isHome),
  },
  {
    href: '/blog/',
    label: currentUI.posts,
    className: getNavItemClass(isBlogActive),
  },
  {
    href: '/projects/',
    label: currentUI.projects,
    className: getNavItemClass(isProjectsActive),
  },
  {
    href: '/about/',
    label: currentUI.about,
    className: getNavItemClass(isAboutActive),
  },
  {
    href: '/resume/',
    label: currentUI.resume,
    className: getNavItemClass(isResumeActive),
  },
  {
    href: '/contact/',
    label: currentUI.contact,
    className: getNavItemClass(isContactActive),
  },
]
---

<nav
  aria-label="Site Navigation"
  class:list={[
    isPost ? 'hidden lg:block' : '',
    'mb-10.5 text-3.6 font-semibold leading-2.45em font-navbar',
    'lg:(uno-desktop-column text-4 bottom-[min(9.04rem+3.85vw,12.5rem)]) cjk:tracking-0.02em',
  ]}
>
  <ul>
    {navItems.map(item => (
      <li>
        <a
          href={item.href}
          class={item.className}
        >
          {item.label}
        </a>
      </li>
    ))}
  </ul>
</nav>
